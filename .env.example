# Alpaca API Configuration
ALPACA_API_KEY=your_api_key_here
ALPACA_SECRET_KEY=your_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Database
DATABASE_URL=sqlite:///data/ktrade.db

# Bot Configuration
BOT_MODE=paper
LOG_LEVEL=INFO
ENVIRONMENT=development

# Strategy Configuration
ENABLE_SIMPLE_MOMENTUM=true
ENABLE_DCA=true
ENABLE_GRID_TRADING=true
ENABLE_SENTIMENT_MOMENTUM=false

# Risk Management
MAX_POSITION_SIZE_PCT=10.0
MAX_PORTFOLIO_EXPOSURE_PCT=80.0
DAILY_LOSS_LIMIT_PCT=3.0
DEFAULT_STOP_LOSS_PCT=5.0

# Watchlist (comma-separated)
WATCHLIST_STOCKS=AAPL,MSFT,GOOGL,AMZN,TSLA
WATCHLIST_CRYPTO=BTC/USD,ETH/USD

# Scheduling (minutes)
MARKET_DATA_INTERVAL=5
STRATEGY_EVAL_INTERVAL=15
PORTFOLIO_SYNC_INTERVAL=60
